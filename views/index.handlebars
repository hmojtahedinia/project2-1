<img class="img-fluid" src="/styles/images/logo.PNG" alt="logo" id="logoSub3">
  <div id="content">
<!-- Hamburger Button-->
  <nav class="navbar navbar-expand-lg justify-content-between">
    <div class="container-fluid">
        <button type="button" id="sidebarCollapse" class="btn ">
          <i class="fas fa-bars"></i>
        </button>       
    </div>
  </nav>
</div>

<!-- Search Parameters-->
<div class=" container input-container " id="searchParameters">
  <form class="form-inline">
    <input class="form-control mr-sm-2" id="searchBox" type="search" placeholder="Search" aria-label="Search">
    <button type="button" id="filter" class="btn" data-toggle="modal" data-target="#locationFilter"><i class="fas fa-filter"></i></button>
    </form>
</div>

<!-- wrap contents in bootstrap wrapper class so contents inside will expand as viewport expands/shrinks -->
  <div class="wrapper">
            
<!-- Sidebar -->
  <nav id="sidebar">
<!-- Logo-->
<img class="img-fluid" src="/styles/images/logo.PNG" alt="logo" id="logoSub">
        <ul class="list-unstyled components">
          <li>
          <a href="/about"><button type="button" class="btn btn-default">How it works</button></a> 
          </li>
          <li>
          <a href="/add"><button type="button" class="btn btn-default">Add a Rating</button></a> 
          </li>
        </ul>
  </nav>
        
<!-- Page Content -->
  <div id="content" class=" container container-fluid" >
    <div id="map" data-filter="{{rating}}"></div>
    </div>
  </div>  
        
<!--Filter modal-->
<div class="container">
                
<!-- Modal -->
  <div class="modal fade" id="locationFilter" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Search for a washroom by rating.</h4>
        </div>
            <div class="modal-body">           
                 <fieldset class="rating">
                    <input type="radio" id="10" name="rating" value="10" /><label class = "full" for="10" title="5 stars"></label>
                    <input type="radio" id="9" name="rating" value="9" /><label class="half" for="9" title="4.5 stars"></label>
                    <input type="radio" id="8" name="rating" value="8" /><label class = "full" for="8" title="4 stars"></label>
                    <input type="radio" id="7" name="rating" value="7" /><label class="half" for="7" title="3.5 stars"></label>
                    <input type="radio" id="6" name="rating" value="6" /><label class = "full" for="6" title="3 stars"></label>
                    <input type="radio" id="5" name="rating" value="5" /><label class="half" for="5" title="2.5 stars"></label>
                    <input type="radio" id="4" name="rating" value="4" /><label class = "full" for="4" title="2 stars"></label>
                    <input type="radio" id="3" name="rating" value="3" /><label class="half" for="3" title="1.5 stars"></label>
                    <input type="radio" id="2" name="rating" value="2" /><label class = "full" for="2" title="1 star"></label>
                    <input type="radio" id="1" name="rating" value="1" /><label class="half" for="1" title="0.5 stars"></label>
                </fieldset>
            </div>
          <div class="modal-footer">
            <button id="submit" type="submit" class="btn btn-default" data-dismiss="modal">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
      </div>
    </div>
  </div>
</div>

<!-- WC Address Modal -->
<div class="container">

  <!-- Modal -->
  <div class="modal fade" id="wcLocation" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Washroom Location</h4>
        </div>
        <div class="modal-body">
          {{this.address}}
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
